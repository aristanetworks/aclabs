---
marp: true
theme: {{ marp_theme }}
{%- if marp_class != "none" %}
class: {{ marp_class }}
{%- endif %}
author: {{ lab_author }}
# size 16:9 1280px 720px
size: 16:9
paginate: true
math: mathjax
style: |
    :root {
        background: linear-gradient(to bottom, #000000, #434343);
    }
    img[alt~="custom"] {
        float: right;
    }
    .columns {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 1rem;
    }
    footer {
        font-size: 14px;
    }
    section::after {
        font-size: 14px;
    }
    img {
        background-color: transparent;
    }
    pre {
        background: linear-gradient(to top, #000000, #434343);
        background-color: transparent;
    }
---

