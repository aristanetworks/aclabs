---
- name: Deploy Configs via CVP
  hosts: CV_SERVERS
  connection: local
  gather_facts: false
  collections:
    - arista.cvp
  tasks:

    - name: Deploy configs generated by AVD on CVP
      import_role:
        name: arista.avd.eos_config_deploy_cvp
      vars:
        container_root: AVD_FABRIC
        configlets_prefix: AVD
        state: present
        cv_collection: v3
